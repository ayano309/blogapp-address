<%= render 'commons/common', book: @newbook, user: @user %>
<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= image_tag(@user.get_profile_image(100,100))%><br>
              <%= @user.name%>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body%></td>
          <td>
            <div id = "show_like_<%= @book.id %>">
              <%= render 'favorites/favorite', book: @book %>
            </div>
          </td>
          <td>
            <p>コメント件数：<%= @book.comments.count %></p>
          </td>
          <% if @user.id == current_user.id %>
          <td>
            <%=link_to "Edit",  edit_book_path(@book), class: "btn btn-sm btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy" ,book_path(@book),  class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
          </td>
          <% end %>
          </tr>
      </tbody>
    </table>
    
    <div id="comments_area">
      <%= render 'comments/index', comments: @comments %>
     
    </div>
    
    <div class = "comment-new">
      <h2 class="mt-3">New Comment</h2>
      
        <%= render 'comments/form', { book: @book , comment: @comment} %>
    </div>
</div>
</div>
</div>